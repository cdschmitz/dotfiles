# Copy file to clipboard
function fcp () {
    local file="$1"
    if [[ ! -f $file ]]; then
        echo "File not found: $file"
        return 1
    fi
    cat $file | pbcopy
}

# Save a backup of whatever file is passed to this function.
# Directories are copied recursively.
function save () {
    local file="$1"
    [[ -z $file ]] && echo "No argument provided." && return 1
    [[ ! -e $file ]] && echo "$file does not exist." && return 2

    local filename=$(basename "$file"){,.save}
    local backup=$(dirname "$file")/$filename
    cp -R "$file" "$backup"
}

# virtualenvwrapper
venvwrapper=/usr/local/bin/virtualenvwrapper.sh
[ -r "$venvwrapper" ] && [ -f "$venvwrapper" ] && source "$venvwrapper";
